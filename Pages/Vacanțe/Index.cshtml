@page "/"
@model Sasarman_Andra_Proiect1.Pages.Vacanțe.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Vacanțe</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].Destinație)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].Plecare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].Preț)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].Durata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].NrPers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacanță[0].Hotel.HotelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vacanță) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destinație)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plecare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preț)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrPers)
            </td>
            <th>
                <a asp-area="" asp-page="../Hoteluri/Index" asp-route-id="@item.HotelID">@Html.DisplayFor(modelItem => item.Hotel.HotelName)</a>
</th>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
